@model Prog7311.Poe.Models.UserModel

@{
    ViewData["Title"] = "Register";

<h2>@ViewData["Title"]</h2>

<br />

<form asp-controller="Login" asp-action="Register" method="post">
        <div>
            <label asp-for="FarmerName"></label>
            <input asp-for="FarmerName" />
            <span asp-validation-for="FarmerName"></span>
        </div>
<br />   
        <div>
            <label asp-for="PhoneNumber"></label>
            <input asp-for="PhoneNumber" />
            <span asp-validation-for="PhoneNumber"></span>
        </div>
<br />
        <div>
            <label asp-for="Email"></label>
            <input asp-for="Email" />
            <span asp-validation-for="Email"></span>
        </div>
<br />
        <div>
            <label asp-for="Username"></label>
            <input asp-for="Username" />
            <span asp-validation-for="Username"></span>
        </div>
<br />    
        <div>
            <label asp-for="Password"></label>
            <input asp-for="Password" type="password" />
            <span asp-validation-for="Password"></span>
        </div>
<br />        
        <div>
            <label asp-for="FarmName"></label>
            <input asp-for="FarmName" />
            <span asp-validation-for="FarmName"></span>
        </div>
<br />
        <div>
            <label asp-for="FarmAddress"></label>
            <input asp-for="FarmAddress" />
            <span asp-validation-for="FarmAddress"></span>
        </div>
<br />   
        <div>
            <label asp-for="FarmLocation"></label>
            <input asp-for="FarmLocation" />
            <span asp-validation-for="FarmLocation"></span>
        </div>
<br />
        <div>
            <label asp-for="FarmSize"></label>
            <input asp-for="FarmSize" />
            <span asp-validation-for="FarmSize"></span>
        </div>
<br />
        <button type="submit" class="btn btn-primary">Register</button>
</form>
<br />
        <div>
            <a asp-controller="Login" asp-action="Index">Already have an account? Login</a>
        </div>
}

@section Styles {
    <style>
        body {
            background-image: url('/Images/dmytro-tolokonov-Jq3WI9IQgEs-unsplash.jpg');
            background-size: cover;
            background-position: center;
            background-attachment: fixed;
            background-repeat: no-repeat;
            min-height: 100vh;
            width: 100%;
        }

        a {
            color: #0d6efd;
            text-decoration: none;
        }
    </style>
}
