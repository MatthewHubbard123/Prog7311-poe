@{
    ViewData["Title"] = "Home Page";
}

@section Styles {
    <style>
        body {
            background-image: url('/Images/dan-meyers-0AgtPoAARtE-unsplash.jpg');
            background-size: cover;
            background-position: center;
            background-attachment: fixed;
            background-repeat: no-repeat;
            min-height: 100vh;
            width: 100%;
        }

        .typing-bounce-heading {
            color: white;
            text-shadow: 2px 2px 4px rgba(0, 0, 0, 0.7);
        }

        h1{
            font-size: 5rem;
            margin-top: 20px;
        }

        p.typing-bounce-heading {
            font-size: 3rem;
            margin-top: 15px;
        }
    </style>
}
<br />
<div class="text-center welcome-container" >
    <h1 class="typing-bounce-heading">Welcome to Agri Energy Connect</h1>
    <p class="typing-bounce-heading">Your one-stop solution for all agricultural needs.</p>
    <br />
    <p class="typing-bounce-heading">To start please click register at the top right and then login.</p>
</div>

@section Scripts {
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            const headings = document.querySelectorAll('.typing-bounce-heading');
            // Add typing effect to each heading
            headings.forEach(heading => {
                const text = heading.textContent;
                heading.textContent = '';
                
                // Create a span for each character
                const characters = text.split('');
                
                // Clear the heading text
                characters.forEach(char => {
                    const span = document.createElement('span');
                    span.textContent = char === ' ' ? '\u00A0' : char; 
                    heading.appendChild(span);
                });
            });
            
            // Add bounce effect to each character
            let delay = 0;
            headings.forEach(heading => {
                const spans = heading.querySelectorAll('span');
                spans.forEach((span, index) => {
                    setTimeout(() => {
                        span.classList.add('visible');
                    }, delay + index * 50); 
                });
                // Increase delay for the next heading
                delay += spans.length * 50 + 300;
            });
        });
    </script>
}