@model IEnumerable<Prog7311.Poe.Models.UserModel>
@{
    ViewBag.Title = "Farmer List";

}

    <h2>Add Farmer</h2>

    <form method="post" action="AddFarmer">
        <div>
            <label for="FarmerName">Farmer Name:</label>
            <input type="text" id="FarmerName" name="FarmerName" required />
        </div>
<br />
        <div>
            <label for="PhoneNumber">Phone Number:</label>
            <input type="text" id="PhoneNumber" name="PhoneNumber" required />
        </div>
<br />
        <div>
            <label for="Email">Email:</label>
            <input type="text" id="Email" name="Email" required />
        </div>
<br />
        <div>
            <label for="Address">Address:</label>
            <input type="text" id="Address" name="Address" required />
        </div>
<br />
        <div>
            <label for="FarmName">Farm Name:</label>
            <input type="text" id="FarmName" name="FarmName" required />
        </div>
<br />
        <div>
            <label for="FarmLocation">Farm Location:</label>
            <input type="text" id="FarmLocation" name="FarmLocation" required />
        </div>
<br />
        <div>
            <label for="FarmSize">Farm Size:</label>
            <input type="text" id="FarmSize" name="FarmSize" required />
        </div>
<br />
        <div>
            <label for="Username">Username:</label>
            <input type="text" id="Username" name="Username" required />
        </div>
<br />
        <div>
            <label for="Password">Password:</label>
            <input type="text" id="Password" name="Password" required />
        </div>
<br />
        <button type="submit" class="btn btn-primary">Add Farmer</button>
    </form>


@section Styles {
    <style>
        body {
            background-image: url('/Images/adele-payman-2oYMwuFgnTg-unsplash.jpg');
            background-size: cover;
            background-position: center;
            background-attachment: fixed;
            background-repeat: no-repeat;
            min-height: 100vh;
            width: 100%;
        }
    </style>
}